&lt;source data-srcset="https://static04.hket.com/res/v3/image/content/3605000/3606346/kelly20250712_00010_1024.jpeg" media="(min-width: 1200px)"/&gt;
&lt;source data-srcset="https://static04.hket.com/res/v3/image/content/3605000/3606346/kelly20250712_00010_600.jpeg" media="(min-width: 992px)"/&gt;
&lt;source data-srcset="https://static04.hket.com/res/v3/image/content/3605000/3606346/kelly20250712_00010_1024.jpeg" media="(min-width: 630px)"/&gt;
